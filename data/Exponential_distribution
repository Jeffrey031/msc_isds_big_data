                  +
                  1
                
              
              
                
                  (
                  
                    
                      x
                      ¯
                    
                  
                  )
                
                
                  n
                
              
            
            
              
                (
                
                  n
                  
                    
                      x
                      ¯
                    
                  
                  +
                  
