                −
                λ
                β
                )
              
            
            
              
              
                
                ∝
                
                  λ
                  
                    (
                    α
                    +
                    n
                    )
                    −
                    1
                  
                
                exp
                ⁡
                (
                −
                λ
                
                  (
                  
