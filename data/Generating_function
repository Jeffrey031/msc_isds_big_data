                p
                
                  1
                
              
              
                z
                
                  2
                
              
            
            
              1
              −
              
                c
                
                  2
                
              
              z
            
          
        
        
          
            
              
                p
                
                  2
                
              
              
                z
                
                  2
                
              
            
            
              1
              −
              
                c
                
                  3
                
              
              z
            
          
        
        ⋯
        ,
      
    
    {\displaystyle A(z)={\frac {1}{1-c_{1}z}}{\frac {p_{1}z^{2}}{1-c_{2}z}}{\frac {p_{2}z^{2}}{1-c_{3}z}}\cdots ,}
  and that 
  
    
      
        
          A
          
            p
          
        
        (
        z
        )
      
    
